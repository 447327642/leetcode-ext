{
  "name": "LeetCode Extension",
  "short_name": "leetcode-ext",
  "version": "0.5.0",
  "description": "LeetCode.com Extension: Commit your code to Github, show your progress, hide difficulty and countdown for submit button",
  "browser_action": {
    "default_icon": "favicon.ico",
    "default_title": "LeetCode Extension",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "https://chrome-ext.luxiakun.com/leetcode-ext",
    "https://api.github.com/"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problemset/algorithms/"],
      "js": ["lib/jquery.js", "lib/highcharts.js", "leetcode-progress.js"]
    },
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["lib/jquery.js", "lib/webtoolkit.base64.js", "lib/to-markdown.js", "leetcode-github.js"]
    },
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["lib/jquery.js", "leetcode-hidden.js"]
    },
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["lib/jquery.js", "leetcode-countdown.js"]
    }
  ],
  "manifest_version": 2
}